.l-tag{
  background-color: #DCEBE6!important;
  color: #157658!important;
  margin-left: 5rpx;
  min-width: 20rpx!important;
  /* padding: 0 10rpx!important; */
}

.title{
  font-size: 28rpx;
  color:#333333;
}

.container{
  width: 340rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 6px 0px rgba(221,221,221,0.5);
  margin-bottom: 30rpx;
  background-color: white;
}

.content-container{
  display: flex;
  flex-direction: column;
  padding: 16rpx 16rpx 22rpx 16rpx;
}

.price-row{
  display: flex;
  flex-direction: row;
}

.tags{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0;
}

.subtitle{
  font-size: 24rpx;
  font-weight: 300;
  margin-top: 6rpx;
  color:#888;
}